{% extends 'base.html.twig' %}

{% block title %}Paiement réussi{% endblock %}

{% block body %}
    <div class="container-fluid page-header py-5 bg-dark">
        <h1 class="text-center text-white display-4 fw-bold">Paiement réussi</h1>
        <ol class="breadcrumb justify-content-center mb-0">
            <li class="breadcrumb-item"><a href="{{ path('app_home') }}" class="text-white">Accueil</a></li>
            <li class="breadcrumb-item active text-white">Paiement réussi</li>
        </ol>
    </div>

    <div class="container-fluid py-5 bg-light">
        <div class="container py-5">
            <div class="card shadow-sm border-0 p-4 text-center">
                <div class="success-header bg-success text-white p-3 rounded-top">
                    <h2 class="mb-0">Paiement réussi !</h2>
                </div>
                <div class="p-4">
                    {% for message in app.flashes('success') %}
                        <div class="alert alert-success" role="alert">
                            {{ message }}
                        </div>
                    {% endfor %}
                    <p>Votre commande (ID: {{ commande.id }}) a été confirmée avec succès.</p>
                    <p><strong>Total :</strong> {{ commande.total }} €</p>
                    <a href="{{ path('app_produit_index') }}" class="btn btn-primary btn-lg rounded-pill">
                        <i class="bi bi-cart me-2"></i>Continuer vos achats
                    </a>
                </div>
            </div>
        </div>
    </div>
{% endblock %}