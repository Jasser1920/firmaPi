{% extends 'base.html.twig' %}

{% block title %}Modifier la commande #{{ commande.id }}{% endblock %}

{% block body %}
    <div class="container-fluid page-header py-5 bg-dark">
        <h1 class="text-center text-white display-4 fw-bold">Modifier la commande</h1>
        <ol class="breadcrumb justify-content-center mb-0">
            <li class="breadcrumb-item"><a href="{{ path('app_home') }}" class="text-white">Accueil</a></li>
            <li class="breadcrumb-item"><a href="{{ path('app_commande_index') }}" class="text-white">Commandes</a></li>
            <li class="breadcrumb-item active text-white">Modifier</li>
        </ol>
    </div>

    <div class="container-fluid py-5 bg-light">
        <div class="container py-5">
            <div class="card shadow-sm border-0 p-4">
                <div class="edit-header bg-success text-white p-3 rounded-top">
                    <h2 class="mb-0">Modifier la commande #{{ commande.id }}</h2>
                </div>
                <div class="p-4">
                    {% for message in app.flashes('success') %}
                        <div class="alert alert-success" role="alert">
                            {{ message }}
                        </div>
                    {% endfor %}
                    {% for message in app.flashes('error') %}
                        <div class="alert alert-danger" role="alert">
                            {{ message }}
                        </div>
                    {% endfor %}

                    {{ form_start(form) }}
                        <div class="mb-3">
                            {{ form_row(form.date_commande) }}
                        </div>
                        <div class="mb-3">
                            {{ form_row(form.total) }}
                        </div>
                        <div class="mb-3">
                            {{ form_row(form.statut) }}
                        </div>
                        <div class="mb-3">
                            {{ form_row(form.produits) }}
                        </div>
                        <div class="mb-3">
                            {{ form_row(form.livraison) }}
                        </div>
                        <div class="d-flex justify-content-between">
                            <a href="{{ path('app_commande_index') }}" class="btn btn-outline-secondary btn-sm rounded-pill">
                                <i class="bi bi-arrow-left me-1"></i>Retour
                            </a>
                            <button type="submit" class="btn btn-primary btn-sm rounded-pill">
                                <i class="bi bi-save me-1"></i>Enregistrer
                            </button>
                        </div>
                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>
{% endblock %}