{{ form_start(form) }}
<div class="card shadow-sm border-0 p-4">
    <div class="mb-4">
        <label class="form-label fw-bold text-primary">{{ form_label(form.titre) }}</label>
        {{ form_widget(form.titre, {'attr': {
            'class': 'form-control form-control-lg',
            'placeholder': 'Entrez le titre de votre réclamation'
        }}) }}
        <div class="text-danger mt-1">{{ form_errors(form.titre) }}</div>
    </div>

    <div class="mb-4">
        <label class="form-label fw-bold text-primary">{{ form_label(form.description) }}</label>
        {{ form_widget(form.description, {'attr': {
            'class': 'form-control form-control-lg',
            'placeholder': 'Décrivez votre réclamation ici',
            'rows': '5'
        }}) }}
        <div class="text-danger mt-1">{{ form_errors(form.description) }}</div>
    </div>

    <div class="d-flex justify-content-between align-items-center">
        <button class="btn btn-primary btn-lg rounded-pill px-5 py-2">
            <i class="bi bi-save me-2"></i>{{ button_label|default('Enregistrer') }}
        </button>
        <a href="{{ path('app_reclammation_index') }}" 
           class="btn btn-outline-secondary rounded-pill px-4">
            <i class="bi bi-arrow-left me-2"></i>Retour à la liste
        </a>
    </div>
</div>
{{ form_end(form) }}