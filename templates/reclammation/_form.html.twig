{{ form_start(form) }}
    <div class="form-group">
        {{ form_label(form.description) }}
        {{ form_widget(form.description, {'attr': {'class': 'form-control', 'placeholder': 'Enter description'}}) }}
        {{ form_errors(form.description) }}
    </div>

    <div class="form-group">
        {{ form_label(form.date_creation) }}
        {{ form_widget(form.date_creation, {'attr': {'class': 'form-control'}}) }}
        {{ form_errors(form.date_creation) }}
    </div>

    <div class="form-group">
        {{ form_label(form.statut) }}
        {{ form_widget(form.statut, {'attr': {'class': 'form-select'}}) }}
        {{ form_errors(form.statut) }}
    </div>

    <div class="form-group">
        {{ form_label(form.utilisateur) }}
        {{ form_widget(form.utilisateur, {'attr': {'class': 'form-select'}}) }}
        {{ form_errors(form.utilisateur) }}
    </div>

    <button class="btn btn-primary">{{ button_label|default('Save') }}</button>
{{ form_end(form) }}