{% block body %}
    <div class="container mt-4">
        {{ form_start(form, {'attr': {'class': 'needs-validation'}}) }}

        <div class="form-group">
            {{ form_label(form.titre) }}
            {{ form_widget(form.titre, {
                'attr': {
                    'class': 'form-control' ~ (form.titre.vars.errors|length > 0 ? ' is-invalid' : ''),
                    'placeholder': 'Enter event title'
                }
            }) }}
            {% if form.titre.vars.errors|length > 0 %}
                <div class="invalid-feedback">
                    {{ form_errors(form.titre) }}
                </div>
            {% endif %}
        </div>

        <div class="form-group">
            {{ form_label(form.desecription) }}
            {{ form_widget(form.desecription, {
                'attr': {
                    'class': 'form-control' ~ (form.desecription.vars.errors|length > 0 ? ' is-invalid' : ''),
                    'placeholder': 'Enter event description',
                    'rows': 4
                }
            }) }}
            {% if form.desecription.vars.errors|length > 0 %}
                <div class="invalid-feedback">
                    {{ form_errors(form.desecription) }}
                </div>
            {% endif %}
        </div>

        <div class="form-group">
            {{ form_label(form.date) }}
            {{ form_widget(form.date, {
                'attr': {
                    'class': 'form-control' ~ (form.date.vars.errors|length > 0 ? ' is-invalid' : ''),
                    'type': 'date'
                }
            }) }}
            {% if form.date.vars.errors|length > 0 %}
                <div class="invalid-feedback">
                    {{ form_errors(form.date) }}
                </div>
            {% endif %}
        </div>

        <div class="form-group">
            {{ form_label(form.lieux) }}
            {{ form_widget(form.lieux, {
                'attr': {
                    'class': 'form-control' ~ (form.lieux.vars.errors|length > 0 ? ' is-invalid' : ''),
                    'placeholder': 'Enter event location'
                }
            }) }}
            {% if form.lieux.vars.errors|length > 0 %}
                <div class="invalid-feedback">
                    {{ form_errors(form.lieux) }}
                </div>
            {% endif %}
        </div>

        <div class="form-group">
            {{ form_label(form.imageFile) }}
            {{ form_widget(form.imageFile, {
                'attr': {
                    'class': 'form-control' ~ (form.imageFile.vars.errors|length > 0 ? ' is-invalid' : '')
                }
            }) }}
            {% if form.imageFile.vars.errors|length > 0 %}
                <div class="invalid-feedback">
                    {{ form_errors(form.imageFile) }}
                </div>
            {% endif %}
        </div>

        <div class="form-group">
            {{ form_label(form.utilisateur) }}
            {{ form_widget(form.utilisateur, {
                'attr': {
                    'class': 'form-control' ~ (form.utilisateur.vars.errors|length > 0 ? ' is-invalid' : '')
                }
            }) }}
            {% if form.utilisateur.vars.errors|length > 0 %}
                <div class="invalid-feedback">
                    {{ form_errors(form.utilisateur) }}
                </div>
            {% endif %}
        </div>

        <button type="submit" class="btn btn-primary mt-3">
            {{ button_label|default('Save') }}
        </button>

        {{ form_end(form) }}
    </div>
{% endblock %}