{% extends 'base.html.twig' %}

{% block title %}Évènements{% endblock %}
{% block stylesheets %}
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Open+Sans:wght@400;600&family=Raleway:wght@600;800&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.15.4/css/all.css"/>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.4.1/font/bootstrap-icons.css" rel="stylesheet">
    <link href="{{ asset('lib/lightbox/css/lightbox.min.css') }}" rel="stylesheet">
    <link href="{{ asset('lib/owlcarousel/assets/owl.carousel.min.css') }}" rel="stylesheet">
    <link href="{{ asset('css/bootstrap.min.css') }}" rel="stylesheet">
    <link href="{{ asset('css/style.css') }}" rel="stylesheet">
    <link href="{{ asset('css/style_event.css') }}" rel="stylesheet">
{% endblock %}
{% block body %}
    <div class="container-fluid page-header py-5">
        <h1 class="text-center text-white display-6">Évènements</h1>
        <ol class="breadcrumb justify-content-center mb-0">
            <li class="breadcrumb-item"><a href="#">Home</a></li>
            <li class="breadcrumb-item active text-white">Évènements</li>
        </ol>
    </div>
    <div class="container-fluid fruite py-5">
        <div class="container py-5">
            <h1 class="mb-4">Liste des Évènements</h1>
            <div class="row g-4">
                <div class="col-lg-12">
                    <div class="row g-4">
                        <div class="col-xl-3">
                            <div class="input-group w-100 mx-auto d-flex">
                                <input type="search" class="form-control p-3" placeholder="Rechercher un évènement" aria-describedby="search-icon-1">
                                <span id="search-icon-1" class="input-group-text p-3"><i class="fa fa-search"></i></span>
                            </div>
                        </div>
                        <div class="col-6"></div>
                        <div class="col-xl-3">
                            <div class="bg-light ps-3 py-3 rounded d-flex justify-content-between mb-4">
                                <label for="events">Trier par :</label>
                                <select id="events" name="eventlist" class="border-0 form-select-sm bg-light me-3" form="eventform">
                                    <option value="nothing">Rien</option>
                                    <option value="date">Date</option>
                                    <option value="location">Lieu</option>
                                    <option value="title">Titre</option>
                                </select>
                            </div>
                        </div>
                    </div>
                    <div class="row g-4">
                        <div class="col-lg-3">
                            <div class="row g-4">
                                <div class="col-lg-12">
                                    <div class="mb-3">
                                        <h4>Catégories</h4>
                                        <ul class="list-unstyled fruite-categorie">
                                            <li><div class="d-flex justify-content-between fruite-name"><a href="#"><i class="fas fa-calendar-alt me-2"></i>Prochains</a><span>(5)</span></div></li>
                                            <li><div class="d-flex justify-content-between fruite-name"><a href="#"><i class="fas fa-calendar-alt me-2"></i>Passés</a><span>(3)</span></div></li>
                                            <li><div class="d-flex justify-content-between fruite-name"><a href="#"><i class="fas fa-calendar-alt me-2"></i>En cours</a><span>(2)</span></div></li>
                                        </ul>
                                    </div>
                                </div>
                                <div class="col-lg-12">
                                    <div class="mb-3">
                                        <h4>Filtrer par date</h4>
                                        <input type="range" class="form-range w-100" id="rangeInput" name="rangeInput" min="0" max="365" value="0" oninput="amount.value=rangeInput.value">
                                        <output id="amount" name="amount" min-value="0" max-value="365" for="rangeInput">0</output>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-lg-9">
                            <div class="row g-4 justify-content-center">
                                {% if evenemments is not empty %}
                                    {% for evenemment in evenemments %}
                                        <div class="col-md-6 col-lg-6 col-xl-4">
                                            <div class="rounded position-relative fruite-item" style="height: 100%;">
                                                <div class="fruite-img">
                                                    {% if evenemment.image %}
                                                        <img src="{{ evenemment.image }}" class="img-fluid w-100 rounded-top" alt="{{ evenemment.titre }}">
                                                    {% else %}
                                                        <img src="img/default-event.jpg" class="img-fluid w-100 rounded-top" alt="Default Event Image">
                                                    {% endif %}
                                                </div>
                                                <div class="text-white bg-secondary px-3 py-1 rounded position-absolute" style="top: 10px; left: 10px;">Évènement</div>
                                                <div class="p-4 border border-secondary border-top-0 rounded-bottom">
                                                    <h4>{{ evenemment.titre }}</h4>
                                                    <p>{{ evenemment.desecription }}</p>
                                                    <div class="d-flex justify-content-between flex-lg-wrap">
                                                        <p class="text-dark fs-5 fw-bold mb-0">{{ evenemment.date ? evenemment.date|date('Y-m-d') : '' }}</p>
                                                        <p class="text-dark fs-5 fw-bold mb-0">{{ evenemment.lieux }}</p>
                                                    </div>
                                                    <div class="d-flex justify-content-between flex-lg-wrap mt-3">
                                                        <a href="{{ path('app_evenemment_show', {'id': evenemment.id}) }}" class="btn border border-secondary rounded-pill px-3 text-primary"><i class="fa fa-info-circle me-2 text-primary"></i> Détails</a>
                                                        <a href="{{ path('app_evenemment_qr', {'id': evenemment.id}) }}" class="btn border border-secondary rounded-pill px-3 text-primary"><i class="fa fa-qrcode me-2 text-primary"></i> Voir code QR</a>
                                                        {% if is_granted('ROLE_agriculture') or is_granted('ROLE_client') %}
                                                            {% set hasParticipated = evenemment.participations|filter(p => p.user == app.user)|length > 0 %}
                                                            {% if hasParticipated %}
                                                                <a href="{{ path('app_don_new', {'eventId': evenemment.id}) }}" class="btn border border-secondary rounded-pill px-3 text-primary"><i class="fa fa-donate me-2 text-primary"></i> Donner un don</a>
                                                            {% else %}
                                                                <form method="post" action="{{ path('app_evenemment_participate', {'id': evenemment.id}) }}" style="display: inline;">
                                                                    <input type="hidden" name="_token" value="{{ csrf_token('participate' ~ evenemment.id) }}">
                                                                    <button type="submit" class="btn border border-secondary rounded-pill px-3 text-primary"><i class="fa fa-check me-2 text-primary"></i> Participer</button>
                                                                </form>
                                                            {% endif %}
                                                        {% endif %}
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    {% endfor %}
                                {% else %}
                                    <div class="col-12">
                                        <p class="text-center">Aucun évènement trouvé.</p>
                                    </div>
                                {% endif %}
                            </div>
                            {% if is_granted('ROLE_association') %}
                                <div class="d-flex justify-content-center mt-5">
                                    <a href="{{ path('app_evenemment_new') }}" class="btn border border-secondary px-4 py-3 rounded-pill text-primary">Ajouter un Évènement</a>
                                </div>
                            {% endif %}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}