{% extends 'base.html.twig' %}

{% block title %}QR Code - {{ evenemment.titre }}{% endblock %}

{% block body %}
    <!-- Single Page Header start -->
    <div class="container-fluid page-header py-5 bg-dark">
        <h1 class="text-center text-white display-4 fw-bold">QR Code pour {{ evenemment.titre }}</h1>
        <ol class="breadcrumb justify-content-center mb-0">
            <li class="breadcrumb-item"><a href="{{ path('app_home') }}" class="text-white">Accueil</a></li>
            <li class="breadcrumb-item"><a href="{{ path('app_evenemment_index') }}" class="text-white">Évènements</a></li>
            <li class="breadcrumb-item active text-white">QR Code</li>
        </ol>
    </div>
    <!-- Single Page Header End -->

    <!-- QR Code Section Start -->
    <div class="container-fluid py-5 bg-light">
        <div class="container py-5 text-center">
            <div class="card shadow-sm border-0 p-4 mx-auto" style="max-width: 500px;">
                <h2 class="text-primary fw-bold mb-4">{{ evenemment.titre }}</h2>
                <img src="{{ qr_code_url }}" alt="QR Code pour {{ evenemment.titre }}" class="img-fluid rounded mb-4" style="max-width: 250px;">
                <p class="text-muted mb-4">Scannez ce QR code pour voir les détails de l'évènement.</p>
                <a href="{{ path('app_evenemment_index') }}" 
                   class="btn btn-outline-primary btn-lg rounded-pill px-5 py-2">
                    <i class="bi bi-arrow-left me-2"></i>Retour à la liste
                </a>
            </div>
        </div>
    </div>
    <!-- QR Code Section End -->
{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        .card {
            transition: transform 0.3s ease-in-out;
        }
        
        .card:hover {
            transform: translateY(-5px);
            box-shadow: 0 10px 20px rgba(0,0,0,0.1) !important;
        }
    </style>
{% endblock %}