{% extends 'base.html.twig' %}

{% block title %}QR Code - {{ evenemment.titre }}{% endblock %}

{% block body %}
    <div class="container-fluid page-header py-5">
        <h1 class="text-center text-white display-6">QR Code pour {{ evenemment.titre }}</h1>
    </div>
    <div class="container py-5 text-center">
        <h2>{{ evenemment.titre }}</h2>
        <img src="{{ qr_code_url }}" alt="QR Code pour {{ evenemment.titre }}" class="img-fluid">
        <p class="mt-3">Scannez ce QR code pour voir les détails de l'évènement.</p>
        <a href="{{ path('app_evenemment_index') }}" class="btn border border-secondary rounded-pill px-3 text-primary mt-3">
            <i class="fa fa-arrow-left me-2 text-primary"></i> Retour à la liste
        </a>
    </div>
{% endblock %}