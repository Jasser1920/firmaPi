{% extends 'base.html.twig' %}

{% block title %}Terrain Index{% endblock %}

{% block page_header_title %}Terrains{% endblock %}
{% block page_header_active %}Terrains{% endblock %}

{% block body %}
    <div class="container-fluid fruite py-5">
        <div class="container py-5">
            <h1 class="mb-4">Liste des terrains disponibles</h1>

            {# Affichage des messages flash #}
            {% for message in app.flashes('success') %}
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    {{ message }}
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            {% endfor %}
            {% for message in app.flashes('error') %}
                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                    {{ message }}
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            {% endfor %}

            <div class="row g-4">
                <div class="col-lg-12">
                    <div class="row g-4">
                        <div class="col-xl-3">
                            <div class="input-group w-100 mx-auto d-flex">
                                <input type="search" class="form-control p-3" placeholder="Rechercher un terrain" aria-describedby="search-icon-1">
                                <span id="search-icon-1" class="input-group-text p-3"><i class="fa fa-search"></i></span>
                            </div>
                        </div>
                        <div class="col-6"></div>
                        <div class="col-xl-3">
                            <div class="bg-light ps-3 py-3 rounded d-flex justify-content-between mb-4">
                                <label for="terrains">Trier par :</label>
                                <select id="terrains" name="terrainlist" class="border-0 form-select-sm bg-light me-3">
                                    <option value="none">Aucun</option>
                                    <option value="price">Prix</option>
                                    <option value="size">Superficie</option>
                                    <option value="date">Date</option>
                                </select>
                            </div>
                        </div>
                    </div>
                    <div class="row g-4">
                        <div class="col-lg-3">
                            <div class="row g-4">
                                <div class="col-lg-12">
                                    <div class="mb-3">
                                        <h4>Catégories</h4>
                                        <ul class="list-unstyled fruite-categorie">
                                            <li>
                                                <div class="d-flex justify-content-between fruite-name">
                                                    <a href="#"><i class="fas fa-leaf me-2"></i>Terrains agricoles</a>
                                                    <span>({{ terrains|length }})</span>
                                                </div>
                                            </li>
                                            <li>
                                                <div class="d-flex justify-content-between fruite-name">
                                                    <a href="#"><i class="fas fa-leaf me-2"></i>Terrains urbains</a>
                                                    <span>(0)</span>
                                                </div>
                                            </li>
                                        </ul>
                                    </div>
                                </div>
                                <div class="col-lg-12">
                                    <div class="mb-3">
                                        <h4>Prix</h4>
                                        <input type="range" class="form-range w-100" id="rangeInput" name="rangeInput" min="0" max="10000" value="0" oninput="amount.value=rangeInput.value">
                                        <output id="amount" name="amount" min-value="0" max-value="10000" for="rangeInput">0</output> DT
                                    </div>
                                </div>
                                <div class="col-lg-12">
                                    <div class="mb-3">
                                        <h4>Filtrer par Disponibilité</h4>
                                        <div class="mb-2">
                                            <input type="radio" class="me-2" id="disponible" name="disponibilite" value="disponible">
                                            <label for="disponible">Disponible</label>
                                        </div>
                                        <div class="mb-2">
                                            <input type="radio" class="me-2" id="indisponible" name="disponibilite" value="indisponible">
                                            <label for="indisponible">Indisponible</label>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-lg-12">
                                    <h4 class="mb-3">Terrains populaires</h4>
                                    {% for terrain in terrains|slice(0, 3) %}
                                        <div class="d-flex align-items-center justify-content-start mb-3">
                                            <div>
                                                <h6 class="mb-2">{{ terrain.description }}</h6>
                                                <p class="mb-0">Prix : {{ terrain.prixLocation }} DT | Superficie : {{ terrain.superficie }} m²</p>
                                            </div>
                                        </div>
                                    {% endfor %}
                                    <div class="d-flex justify-content-center my-4">
                                        <a href="#" class="btn border border-secondary px-4 py-3 rounded-pill text-primary w-100">Voir plus</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-lg-9">
                            <div class="row g-4 justify-content-center">
                                {% for terrain in terrains %}
                                    <div class="col-md-6 col-lg-6 col-xl-4">
                                        <div class="rounded position-relative fruite-item" style="min-height: 300px; max-height: 350px;">
                                            <div class="p-4 border border-secondary border-top-0 rounded-bottom d-flex flex-column justify-content-between" style="height: 100%;">
                                                <div>
                                                    <h4 class="mb-3">{{ terrain.description }}</h4>
                                                    <p class="mb-3">Superficie : {{ terrain.superficie }} m² | Prix : {{ terrain.prixLocation }} DT</p>
                                                    <p class="text-dark fs-5 fw-bold mb-3">Disponibilité : {{ terrain.disponibilite ? 'Oui' : 'Non' }}</p>
                                                </div>
                                                <div>
                                                    <div class="d-flex justify-content-between mb-3">
                                                        <div>
                                                            <a href="{{ path('app_terrain_show', {'id': terrain.id}) }}" class="btn btn-info me-2">Voir</a>
                                                            {# Afficher "Louer" uniquement si le terrain est disponible #}
                                                            {% if terrain.disponibilite %}
                                                                <a href="{{ path('app_location_rent', {'id': terrain.id}) }}" class="btn btn-success me-2">Louer</a>
                                                            {% endif %}
                                                        </div>
                                                    </div>
                                                    <small class="text-muted">Créé le : {{ terrain.dateCreation ? terrain.dateCreation|date('Y-m-d') : '' }}</small>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                {% else %}
                                    <div class="col-12">
                                        <p class="text-center">Aucun terrain trouvé</p>
                                    </div>
                                {% endfor %}
                            </div>
                            <div class="col-12">
                                <div class="pagination d-flex justify-content-center mt-5">
                                    <a href="#" class="rounded">«</a>
                                    <a href="#" class="active rounded">1</a>
                                    <a href="#" class="rounded">2</a>
                                    <a href="#" class="rounded">3</a>
                                    <a href="#" class="rounded">4</a>
                                    <a href="#" class="rounded">5</a>
                                    <a href="#" class="rounded">6</a>
                                    <a href="#" class="rounded">»</a>
                                </div>
                            </div>
                        </div>
                    </div>
                    <a href="{{ path('app_terrain_new') }}" class="btn border border-secondary rounded-pill px-3 text-primary mt-3">Créer un nouveau terrain</a>
                </div>
            </div>
        </div>
    </div>
{% endblock %}