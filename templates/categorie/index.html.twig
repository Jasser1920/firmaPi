{% extends 'base.html.twig' %}

{% block title %}Categorie Index{% endblock %}

{% block body %}
    <div class="login-container">
        <div class="login-box">
            <h1>Categorie Index</h1>

            <table class="table">
                <thead>
                    <tr>
                        <th>Id</th>
                        <th>Nom_categorie</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                {% for categorie in categories %}
                    <tr>
                        <td>{{ categorie.id }}</td>
                        <td>{{ categorie.nomCategorie }}</td>
                        <td>
                            <a href="{{ path('app_categorie_show', {'id': categorie.id}) }}" class="btn btn-show">Show</a>
                            <a href="{{ path('app_categorie_edit', {'id': categorie.id}) }}" class="btn btn-edit">Edit</a>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="3">No records found</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>

            <a href="{{ path('app_categorie_new') }}" class="btn btn-new">Create new</a>
        </div>
    </div>
{% endblock %}