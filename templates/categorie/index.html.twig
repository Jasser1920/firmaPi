{% extends 'base.html.twig' %}

{% block title %}Category List{% endblock %}

{% block body %}
    <!-- Page Header -->
    <div class="container-fluid page-header py-5 bg-dark">
        <h1 class="text-center text-white display-4 fw-bold">Categories</h1>
        <ol class="breadcrumb justify-content-center mb-0">
            <li class="breadcrumb-item"><a href="{{ path('app_home') }}" class="text-white">Home</a></li>
            <li class="breadcrumb-item active text-white">Categories</li>
        </ol>
    </div>

    <!-- Category List -->
    <div class="container-fluid py-5 bg-light">
        <div class="container py-5">
            <div class="text-center mb-5">
                <h4 class="text-primary text-uppercase letter-spacing-2">Categories</h4>
                <h1 class="display-5 fw-bold text-dark mb-4">Manage Categories</h1>
            </div>

            <!-- Table -->
            <div class="card shadow-sm border-0 p-4">
                <div class="d-flex justify-content-between align-items-center mb-4">
                    <h4 class="text-primary mb-0">Category List</h4>
                    <a href="{{ path('app_categorie_new') }}" class="btn btn-primary btn-sm rounded-pill">
                        <i class="bi bi-plus-circle me-1"></i>Create New
                    </a>
                </div>
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Name</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for categorie in categories %}
                            <tr>
                                <td>{{ categorie.id }}</td>
                                <td>{{ categorie.nomCategorie }}</td>
                                <td>
                                    <a href="{{ path('app_categorie_show', {'id': categorie.id}) }}" class="btn btn-outline-primary btn-sm rounded-pill">
                                        <i class="bi bi-eye me-1"></i>Show
                                    </a>
                                    <a href="{{ path('app_categorie_edit', {'id': categorie.id}) }}" class="btn btn-outline-warning btn-sm rounded-pill">
                                        <i class="bi bi-pencil me-1"></i>Edit
                                    </a>
                                </td>
                            </tr>
                        {% else %}
                            <tr>
                                <td colspan="3" class="text-center">No categories found.</td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
{% endblock %}