{{ form_start(form, {'attr': {'enctype': 'multipart/form-data'}}) }}
<div class="card shadow-sm border-0 p-4">
    <div class="mb-4">
        {{ form_label(form.nom, null, {'label_attr': {'class': 'form-label fw-bold text-primary'}}) }}
        {{ form_widget(form.nom, {'attr': {'class': 'form-control form-control-lg', 'placeholder': 'Entrez le nom du produit'}}) }}
        <div class="text-danger mt-1">{{ form_errors(form.nom) }}</div>
    </div>

    <div class="mb-4">
        {{ form_label(form.prix, null, {'label_attr': {'class': 'form-label fw-bold text-primary'}}) }}
        {{ form_widget(form.prix, {'attr': {'class': 'form-control form-control-lg', 'placeholder': 'Entrez le prix du produit'}}) }}
        <div class="text-danger mt-1">{{ form_errors(form.prix) }}</div>
    </div>

    <div class="mb-4">
        {{ form_label(form.description, null, {'label_attr': {'class': 'form-label fw-bold text-primary'}}) }}
        {{ form_widget(form.description, {'attr': {'class': 'form-control form-control-lg', 'placeholder': 'Décrivez le produit', 'rows': '5'}}) }}
        <div class="text-danger mt-1">{{ form_errors(form.description) }}</div>
    </div>

    <div class="mb-4">
        {{ form_label(form.image, null, {'label_attr': {'class': 'form-label fw-bold text-primary'}}) }}
        {{ form_widget(form.image, {'attr': {'class': 'form-control form-control-lg'}}) }}
        <div class="text-danger mt-1">{{ form_errors(form.image) }}</div>
    </div>

    <div class="mb-4">
        {{ form_label(form.quantite, null, {'label_attr': {'class': 'form-label fw-bold text-primary'}}) }}
        {{ form_widget(form.quantite, {'attr': {'class': 'form-control form-control-lg', 'placeholder': 'Entrez la quantité disponible'}}) }}
        <div class="text-danger mt-1">{{ form_errors(form.quantite) }}</div>
    </div>

    <div class="mb-4">
        {{ form_label(form.date_expiration, null, {'label_attr': {'class': 'form-label fw-bold text-primary'}}) }}
        {{ form_widget(form.date_expiration, {'attr': {'class': 'form-control form-control-lg'}}) }}
        <div class="text-danger mt-1">{{ form_errors(form.date_expiration) }}</div>
    </div>

    <div class="mb-4">
        {{ form_label(form.categorie, null, {'label_attr': {'class': 'form-label fw-bold text-primary'}}) }}
        {{ form_widget(form.categorie, {'attr': {'class': 'form-select form-control-lg'}}) }}
        <div class="text-danger mt-1">{{ form_errors(form.categorie) }}</div>
    </div>

    <div class="d-flex justify-content-between align-items-center">
        <button class="btn btn-primary btn-lg rounded-pill px-5 py-2">
            <i class="bi bi-save me-2"></i>{{ button_label|default('Enregistrer') }}
        </button>
        <a href="{{ path('app_produit_index') }}" 
           class="btn btn-outline-secondary rounded-pill px-4">
            <i class="bi bi-arrow-left me-2"></i>Retour à la liste
        </a>
    </div>
</div>
{{ form_end(form) }}