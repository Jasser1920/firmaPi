{% extends 'base.html.twig' %}

{% block title %}Nouveau Produit{% endblock %}

{% block body %}
    <!-- Single Page Header start -->
    <div class="container-fluid page-header py-5 bg-dark">
        <h1 class="text-center text-white display-4 fw-bold">Nouveau Produit</h1>
        <ol class="breadcrumb justify-content-center mb-0">
            <li class="breadcrumb-item"><a href="{{ path('app_home') }}" class="text-white">Accueil</a></li>
            <li class="breadcrumb-item"><a href="{{ path('app_produit_index') }}" class="text-white">Produits</a></li>
            <li class="breadcrumb-item active text-white">Nouveau</li>
        </ol>
    </div>
    <!-- Single Page Header End -->

    <!-- Form Start -->
    <div class="container-fluid py-5 bg-light">
        <div class="container py-5">
            <div class="row justify-content-center">
                <div class="col-lg-8 col-md-10">
                    <div class="text-center mb-5">
                        <h4 class="text-primary text-uppercase letter-spacing-2">Ajouter un Produit</h4>
                        <h1 class="display-5 fw-bold text-dark mb-4">Créer un Nouveau Produit</h1>
                    </div>
                    
                    <div class="card shadow-sm border-0 p-4">
                        {{ include('produit/_form.html.twig', {'button_label': 'Créer le Produit'}) }}
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- Form End -->
{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        .card {
            transition: transform 0.3s ease-in-out;
        }
        
        .card:hover {
            transform: translateY(-5px);
            box-shadow: 0 10px 20px rgba(0,0,0,0.1) !important;
        }
        
        .letter-spacing-2 {
            letter-spacing: 2px;
        }
        
        .form-control-lg {
            border-radius: 0.5rem;
        }
    </style>
{% endblock %}