<div class="container-fluid fixed-top">
    <div class="container topbar bg-primary d-none d-lg-block">
        <div class="d-flex justify-content-between">
            <div class="top-info ps-2">
                {% if app.user %}
                    <small class="me-3">
                        <img src="{{ asset('uploads/profile_pictures/' ~ app.user.profilePicture) }}" alt="Profile Picture" class="rounded-circle" style="width: 30px; height: 30px;">
                        <i class="fas fa-user me-2 text-secondary"></i> 
                        <a href="#" class="text-white">{{ app.user.nom }} {{ app.user.prenom }}</a>
                    </small>
                    <small class="me-3">
                        <i class="fas fa-envelope me-2 text-secondary"></i>
                        <a href="#" class="text-white">{{ app.user.email }}</a>
                    </small>
                {% endif %}
            </div>
            <div class="top-link pe-2">
                <!-- Additional top links can go here -->
            </div>
        </div>
    </div>
    <div class="container px-0">
        <nav class="navbar navbar-light bg-white navbar-expand-xl">
            <img src="{{ asset('img/logo.jpeg') }}" alt="Logo" class="logo-nav">
            <a href="{{ path('app_home') }}" class="navbar-brand"><h1 class="text-primary display-6">Firma</h1></a>
            <button class="navbar-toggler py-2 px-3" type="button" data-bs-toggle="collapse" data-bs-target="#navbarCollapse">
                <span class="fa fa-bars text-primary"></span>
            </button>
            <div class="collapse navbar-collapse bg-white" id="navbarCollapse">
                <div class="navbar-nav mx-auto">
                    <a href="{{ path('app_produit_new') }}" class="nav-item nav-link">Add product</a>
                    <a href="{{ path('app_evenemment_new') }}" class="nav-item nav-link">Add Evenement</a>
                    <a href="{{ path('app_don_new') }}" class="nav-item nav-link">Add don</a>
                    <a href="{{ path('app_categorie_new') }}" class="nav-item nav-link">Add Categorie</a>
                    <a href="{{ path('app_reclammation_new') }}" class="nav-item nav-link">Add reclamation</a>
                    <a href="{{ path('app_reponse_reclamation_new') }}" class="nav-item nav-link">Add reponse reclamation</a>
                    <a href="{{ path('app_commande_new') }}" class="nav-item nav-link">Add commande</a>
                    <a href="{{ path('app_terrain_new') }}" class="nav-item nav-link">Add terrain</a>
                    <a href="{{ path('app_location_new') }}" class="nav-item nav-link">Add location</a>
                    <a href="{{ path('app_livraison_new') }}" class="nav-item nav-link">Add livraison</a>
                </div>
                <div class="d-flex m-3 me-0">
                    
                        <a href="{{ path('app_cart_show') }}" class="position-relative me-4 my-auto">
                            <i class="fa fa-shopping-bag fa-2x"></i>
                            <span class="position-absolute bg-secondary rounded-circle d-flex align-items-center justify-content-center text-dark px-1" style="top: -5px; left: 15px; height: 20px; min-width: 20px;">
                                {{ app.session.get('cart', [])|length }}
                            </span>
                        </a>
                    <div class="nav-item dropdown">
                        {% if app.user %}
                            <a href="#" class="nav-link dropdown-toggle" data-bs-toggle="dropdown" aria-expanded="false">
                                <i class="fas fa-user fa-2x"></i>
                            </a>
                            <div class="dropdown-menu dropdown-menu-end border-0 rounded-0 bg-secondary" aria-labelledby="profileDropdown">
                            <a href="{{ path('app_reclammation_index') }}" class="dropdown-item text-white">Passe reclamation</a>
                                <a href="{{ path('app_profiledetails') }}" class="dropdown-item text-white">Profile</a>
                                <a href="{{ path('app_logout') }}" class="dropdown-item text-white">Disconnect</a>
                            </div>
                        {% else %}
                            <a href="{{ path('app_login') }}" class="nav-link">
                                <i class="fas fa-sign-in-alt fa-2x"></i> Login
                            </a>
                        {% endif %}
                    </div>
                </div>
            </div>
        </nav>
    </div>
</div>